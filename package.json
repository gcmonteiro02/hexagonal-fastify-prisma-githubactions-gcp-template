{
  "name": "hexagonal-ddd-template",
  "version": "1.0.0",
  "description": "Hexagonal template",
  "main": "index.js",
  "author": "Gabriel Monteiro",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "dev": "nodemon",
    "build": "rimraf ./dist && yarn lint && tsc -p ./tsconfig.json",
    "start": "node ./dist/index.js",
    "postinstall": "npx prisma generate",
    "gcp-build": "tsc -p ."
  },
  "devDependencies": {
    "@jest/types": "^29.5.0",
    "@tsconfig/node16": "^1.0.3",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "ts-dotenv": "^0.8.3",
    "tslint": "^6.1.3",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@fastify/cors": "^8.2.1",
    "@fastify/rate-limit": "^8.0.0",
    "@fastify/swagger": "^8.3.1",
    "@fastify/swagger-ui": "^1.8.0",
    "@prisma/client": "^4.12.0",
    "dotenv": "^16.0.3",
    "fastify": "^4.15.0",
    "husky": "4.3.8",
    "prisma": "^4.13.0",
    "tsc": "^2.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo \"[Husky] pre-commit is running, please wait...\" && yarn format && yarn lint && git add ."
    }
  },
  "prisma": {
    "schema": "src/adapter/secondary/libs/prisma/schema.prisma"
  }
}
